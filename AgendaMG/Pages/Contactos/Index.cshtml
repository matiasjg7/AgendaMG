@page
@model AgendaMG.Pages.Contactos.IndexModel
@{
    ViewData["Title"] = "Lista de contactos";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Contactos</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-success" asp-page="/Contactos/Crear">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                  <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                </svg>
                Crear nuevo contacto
                </a>
        </div>
    </div>
</div>

<div>
    <br />
    <br />

    @if (Model.Contactos.Count() > 0)
    {
        <table id="tblContactos" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().CorreoElectronico)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().Telefono)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().Direccion)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().FechaCreacion)</th>
                    <th>@Html.DisplayNameFor(m => m.Contactos.FirstOrDefault().Categoria)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contacto in Model.Contactos)
                {
                    if (contacto.Eliminado == false)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => contacto.Id)</td>
                            <td>@Html.DisplayFor(m => contacto.Nombre)</td>
                            <td>@Html.DisplayFor(m => contacto.CorreoElectronico)</td>
                            <td>@Html.DisplayFor(m => contacto.Telefono)</td>
                            <td>@Html.DisplayFor(m => contacto.Direccion)</td>
                            <td>@Html.DisplayFor(m => contacto.FechaCreacion)</td>
                            <td>@Html.DisplayFor(m => contacto.Categoria.Nombre)</td>
                            <td>
                                <a class="btn btn-info" asp-page="../Contactos/Detalle" asp-route-id="@contacto.Id ">Detalle</a>
                                <a class="btn btn-warning" asp-page="../Contactos/Editar" asp-route-id="@contacto.Id ">Editar</a>
                                <a class="btn btn-danger" asp-page="../Contactos/Borrar" asp-route-id="@contacto.Id ">Borrar</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay contactos</p>
    }

</div>